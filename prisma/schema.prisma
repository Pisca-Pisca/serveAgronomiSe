// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Conteudo {
    id                            String @id @default(uuid())
    titulo                        String 
    descricao                     String 
    link                          String 
    imagem                        String
}

model Parceiro{
    id                            String @id @default(uuid())
    linkRedirecionamento          String 
    logoParceiro                  String
}

model Comodante{
  idComodante                         String @id @default(uuid())
  primeiroNomeComodante               String 
  sobrenomeComodante                  String
  emailComodante                      String  @unique
  senhaComodante                      String
  nascimentoComodante                 String
  cpfComodante                        String  @unique
  rgComodante                         String
  enderecoComodante                   String
  cidadeEstadoComodante               String
  uploadRgComodante                   String
  uploadCpfComodante                  String
  uploadComprovanteEnderecoComodante  String

  terrenos                            Terreno[]
}

model Comodatario{
  idComodatario                         String @id @default(uuid())
  primeiroNomeComodatario               String 
  sobrenomeComodatario                  String
  emailComodatario                      String  @unique
  senhaComodatario                      String
  nascimentoComodatario                 String
  cpfComodatario                        String  @unique
  rgComodatario                         String
  enderecoComodatario                   String
  cidadeEstadoComodatario               String
  uploadRgComodatario                   String
  uploadCpfComodatario                  String
  uploadComprovanteEnderecoComodatario  String

  terreno                               Terreno?
}

model Terreno{
  idTerreno                  String @id @default(uuid())
  cep                        String
  endereco                   String
  numero                     Int
  bairro                     String
  cidade                     String
  complemento                String
  metragem                   String
  tituloCard                 String
  descricaoCard              String
  uploadImagem               String
  uploadEscritura            String
  Comodatario_idComodatario  String @unique
  Comodante_idComodante      String

  comodatario Comodatario @relation(fields: [Comodatario_idComodatario], references: [idComodatario])
  comodante   Comodante   @relation(fields: [Comodante_idComodante],     references: [idComodante])
}